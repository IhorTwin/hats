  "name": "Video-banner-section",
  "tag": "section",
  "class": "section-video section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "video",
      "id": "vb_video",
      "label": "Banner video"
    },
    {
      "type": "image_picker",
      "id": "vb_image",
      "label": "Image URL"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Video banner title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Video banner subtitle"
    }
  ],
  "blocks": [
    {
      "type": "video-banner-section",
      "name": "Logo for banner",
      "settings": [
