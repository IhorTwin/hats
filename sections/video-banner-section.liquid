<style>
    .h--video-banner-section {
      position: relative;
      min-height: calc(100vh - 84px);
      display: flex;
    }

    .h--video-banner-section__video {
      position: absolute
      z-index: 1;
      inset: 0;
      display: flex;
    }

    .h--video-banner-section__video video {
      width: 100%;
      object-fit: cover;
      z-index: 0;
    }

    .h--video-banner-section__content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 2;
      margin: auto;
      color: white;
    }

    .h--video-banner-section__content .h2 {
      color: inherit;
  }
</style>

<div class="h--video-banner-section template-{{ template.name }}">
  <div class="h--video-banner-section__video">
    <video
      autoplay
      src="{{ section.settings.vb_video.preview_image }}"
      width="960"
      height="auto"
      poster="{{ "cover-main-banner.png" | asset_url }}"
    ></video>
  </div>

  {% comment %} --- {% endcomment %}

  <div class="h--video-banner-section__content">
    
    {{
        section.settings.vb_image.src
    }}


    {%- if section.settings.title != blank -%}
      <h1 class="h2 inline-richtext center">
        {{ section.settings.title }}
      </h1>
    {%- endif -%}
    {%- if section.settings.subtitle != blank -%}
      <p class="inline-richtext">
        {{ section.settings.subtitle }}
      </p>
    {%- endif -%}
  </div>
</div>
